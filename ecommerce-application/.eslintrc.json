{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:prettier/recommended",
        "prettier"
      ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["import", "prettier"],
    "rules": {
        "max-lines-per-function": ["error", 40],
        "prettier/prettier": "error"
    }
}
